#include <iostream>
#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
using namespace std; 
  
// Driver Code 
int main() 
{ 
    char name[100];
    int age;
    char initial;
    float avg;
    printf("Please enter your first name, your age, your initial for your last name, and your grade average.\n");
    scanf("%s %d %c %f", &name, &age, &initial, &avg);
    printf("Your name is %s. You are %d years old. The initial of your last name is %c. Your grade average is %.2f.", name, age, initial, avg);

    return 0; 
} 
